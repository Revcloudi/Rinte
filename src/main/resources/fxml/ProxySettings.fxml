<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.liev.clouds.webcontroller.top.ProxySettingsController">
    <VBox spacing="10" StackPane.alignment="CENTER">
        <!-- 第一行：两个复选框 -->
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <CheckBox fx:id="enableCheckBox" prefHeight="28" prefWidth="100" text="启用" />
            <CheckBox fx:id="disableCheckBox" prefHeight="28" prefWidth="100" selected="true" text="禁用" />
        </HBox>

        <!-- 第二行：点击下拉菜单 -->
        <HBox alignment="CENTER" spacing="10">
            <Label prefWidth="100" style="-fx-font-size: 16px;" text="代理类型:" />
            <ComboBox fx:id="proxyTypeComboBox" prefHeight="28" prefWidth="200">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="HTTP" />
                        <String fx:value="HTTPS" />
                        <String fx:value="SOCKS" />
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>

        <!-- 使用GridPane来对齐标签和输入框 -->
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- 第三行：IP地址输入框 -->
            <Label style="-fx-font-size: 16px;" text="IP地址:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="ipAddressField" prefHeight="30" prefWidth="600" promptText="输入IP地址" style="-fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label style="-fx-font-size: 16px; -fx-text-fill: red;" text="*" GridPane.columnIndex="2" GridPane.rowIndex="0" />

            <!-- 第四行：端口输入框 -->
            <Label style="-fx-font-size: 16px;" text="端口:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="portField" prefHeight="30" prefWidth="600" promptText="输入端口" style="-fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label style="-fx-font-size: 16px; -fx-text-fill: red;" text="*" GridPane.columnIndex="2" GridPane.rowIndex="1" />

            <!-- 第五行：用户名输入框 -->
            <Label prefWidth="100" style="-fx-font-size: 16px;" text="用户名:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="usernameField" prefHeight="30" prefWidth="600" promptText="输入用户名" style="-fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <!-- 第六行：密码输入框 -->
            <Label prefWidth="100" style="-fx-font-size: 16px;" text="密码:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <PasswordField fx:id="passwordField" prefHeight="30" prefWidth="600" promptText="输入密码" style="-fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        </GridPane>

        <!-- 最后一行：取消和保存按钮 -->
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="cancelButton" minHeight="28" minWidth="50" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="取消" />
            <Button fx:id="saveButton" minHeight="28" minWidth="50" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="保存" />
        </HBox>

        <!-- 响应框 -->
        <TextArea fx:id="responseArea" editable="false" prefHeight="96.0" prefWidth="800" wrapText="true" />
    </VBox>
</StackPane>
